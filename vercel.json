{
    "version": 2,
    "builds": [
        {
            "src": "fuze/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "fuze/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "fuze.settings",
        "PYTHONPATH": "/vercel/path0"
    }
}